using System;

namespace circulo
{
	class Program
	{
		public static void Main(string[] args)
		{
			Double r,pe,a;
			Double  p = 3.1416;
						Console.WriteLine(" ");
			Console.WriteLine("CALCULA AREA Y PERIMETRO DE UN CIRCULO");
			Console.WriteLine(" ");
				Console.WriteLine("Ingresa radio");
			    r=Double.Parse(Console.ReadLine());
				pe=2*p*r;
				a=p*r*r;
				Console.WriteLine("El perimetro :" + pe);
				Console.WriteLine(" ");
				Console.WriteLine("El area del circulo:" + a);
				Console.WriteLine(" ");
			Console.Write("Presiona una tecla para salir . . . ");
			Console.ReadKey(true);
		}
	}
}
